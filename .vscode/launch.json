    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) PlushPlayer starten",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/PlushPlayer/PlushPlayer",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/PlushPlayer",
            "environment": [
                {
                    "name": "DISPLAY",
                    "value": ":0"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Automatische Strukturierung und Einr端ckung f端r gdb aktivieren",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Disassemblierungsvariante auf Intel festlegen",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
