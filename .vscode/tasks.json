{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "nmake /f Makefile.w32 install",
            "command": "nmake",
            "args": [
                "-f",
                "Makefile.w32",
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Release erstellen."
        },
        {
            "type": "cppbuild",
            "label": "make",
            "command": "make",
            "args": [
                "DEBUG=1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Release erstellen."
        }
    ],
    "version": "2.0.0"
}